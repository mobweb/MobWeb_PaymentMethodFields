<?xml version="1.0"?>
<config>
    <modules>
        <MobWeb_PaymentMethodFields>
            <version>0.0.1</version>
        </MobWeb_PaymentMethodFields>
    </modules>
    <global>
        <helpers>
            <paymentmethodfields>
                <class>MobWeb_PaymentMethodFields_Helper</class>
            </paymentmethodfields>
        </helpers>
        <blocks>
            <paymentmethodfields>
                <class>MobWeb_PaymentMethodFields_Block</class>
            </paymentmethodfields>
        </blocks>
        <models>
            <paymentmethodfields>
                <class>MobWeb_PaymentMethodFields_Model</class>
            </paymentmethodfields>
        </models>
        <resources>
            <paymentmethodfields_setup>
                <setup>
                    <module>MobWeb_PaymentMethodFields</module>
                    <class>Mage_Sales_Model_Entity_Setup</class>
                </setup>
            </paymentmethodfields_setup>
        </resources>
        <events>
            <sales_quote_save_before>
                <observers>
                    <payment_method_fields_sales_quote_save_before>
                        <type>singleton</type>
                        <class>MobWeb_PaymentMethodFields_Model_Observer</class>
                        <method>salesQuoteSaveBefore</method>
                    </payment_method_fields_sales_quote_save_before>
                </observers>
            </sales_quote_save_before>
        </events>
        <fieldsets>
            <sales_convert_quote>
                <custom_field>
                    <to_order>*</to_order>
                </custom_field>
            </sales_convert_quote>
        </fieldsets>
    </global>
    <frontend>
        <layout>
            <updates>
                <paymentmethodfields>
                    <file>paymentmethodfields.xml</file>
                </paymentmethodfields>
            </updates>
        </layout>
    </frontend>
</config>